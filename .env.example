# Database Configuration
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/ashby_feedback

# Ashby API Configuration
# Get your API key from Ashby → Settings → Developer → API Keys
ASHBY_API_KEY=your_ashby_api_key_here

# Webhook secret for signature verification
# Generate a secure random string (32+ characters)
# Use: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Use the same secret in Ashby webhook configuration
ASHBY_WEBHOOK_SECRET=your_webhook_secret_here

# Slack Configuration
# Bot User OAuth Token from Slack → OAuth & Permissions
# Format: xoxb-...
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Signing Secret from Slack → Basic Information → App Credentials
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Application Configuration
# Logging level: DEBUG, INFO, WARNING, ERROR
# Use INFO in production, DEBUG for development
LOG_LEVEL=INFO
